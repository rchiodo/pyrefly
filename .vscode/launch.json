{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "(Windows) Attach",
        "type": "cppvsdbg",
        "request": "attach",
        "processId": "${command:pickProcess}",
      },
      {
        // Used for testing the extension.
        "name": "Run Installed Extension",
        "type": "extensionHost",
        "request": "launch",
        "runtimeExecutable": "${execPath}",
        "args": [
          "--extensionDevelopmentPath=${workspaceFolder}/lsp",
          "--log rust-lang.rust-analyzer:debug"
        ],
        "outFiles": [
          "${workspaceFolder}/lsp/dist/**/*.js"
        ],
        "preLaunchTask": "build extension",
        "skipFiles": [
          "<node_internals>/**/*.js"
        ]
      },
      {
        // Used for testing the extension.
        "name": "Run Installed Extension (with debug lsp)",
        "type": "extensionHost",
        "request": "launch",
        "runtimeExecutable": "${execPath}",
        "args": [
          "--extensionDevelopmentPath=${workspaceFolder}/lsp",
          "--log rust-lang.rust-analyzer:debug"
        ],
        "outFiles": [
          "${workspaceFolder}/lsp/dist/**/*.js"
        ],
        "preLaunchTask": "build debug extension",
        "skipFiles": [
          "<node_internals>/**/*.js"
        ]
      }
    ]
  }
